@model LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogix Yazar Paneli - Giriş Yap</title>

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/colorlib-regform-17/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-17/css/style.css">

    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>

    <div class="wrapper" style="background-image: url('@Url.Content("~/colorlib-regform-17/images/bg-registration-form-1.jpg")');">

        <div class="inner">
            <div class="image-holder">
                <img src="~/colorlib-regform-17/images/registration-form-1.jpg" alt="Login Form">
            </div>
            <form method="post">
                <h3>YAZAR GİRİŞ PANELİ</h3>
                <div class="form-wrapper">
                    <input type="text" placeholder="Kullanıcı Adınız" class="form-control" asp-for="Username" required>
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">
                    <input type="password" placeholder="Şifreniz" class="form-control" asp-for="Password" required>
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <button type="submit">
                    Giriş Yap
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="form-footer">
                    <p>&#8203;</p>
                </div>
                <div class="author-login">
                    <a href="/Login/Index">Kullanıcı Girişi İçin Tıklayınız</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (!string.IsNullOrEmpty(ViewBag.abc as string))
        {
            var encodeMessage = System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(ViewBag.abc);
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Uyarı',
                        text: '@Html.Raw(encodeMessage)',
                        confirmButtonText: 'Tamam',
                        confirmButtonColor: '#d33'
                    });
            </text>
        }
    </script>
</body>
</html>
<style>
    .form-footer {
        text-align: center; /* Ortalamak için */
        margin-top: 20px; /* Formdan boşluk bırakmak için */
    }

    .author-login {
        background-color: black; /* Sarı arka plan */
        text-align: center; /* Yazıyı ortala */
        padding: 10px 20px; /* İç boşluk ekle */
        border-radius: 5px; /* Köşeleri yuvarlat */
        font-weight: bold; /* Kalın font */
        display: block; /* Bloğa çevir */
        width: 100%; /* Form genişliği kadar uzasın */
        margin-top: 10px; /* Formun altına biraz boşluk bırak */
    }

        .author-login a {
            color: white !important; /* Yazı rengini beyaz yap */
            text-decoration: none; /* Altı çizili olmasını engelle */
            font-weight: bold;
        }
</style>