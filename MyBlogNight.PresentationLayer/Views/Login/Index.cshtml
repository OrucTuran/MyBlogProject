@model LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogix - Giriş Yap</title>
    
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/colorlib-regform-17/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-17/css/style.css">
</head>
<body>

    <div class="wrapper" style="background-image: url('@Url.Content("~/colorlib-regform-17/images/bg-registration-form-1.jpg")');">

        <div class="inner">
            <div class="image-holder">
                <img src="~/colorlib-regform-17/images/registration-form-1.jpg" alt="Login Form">
            </div>
            <form method="post">
                <h3>BLOGIX GİRİŞ YAP</h3>
                <div class="form-wrapper">
                    <input type="text" placeholder="Kullanıcı Adınız" class="form-control" asp-for="Username">
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">
                    <input type="password" placeholder="Şifreniz" class="form-control" asp-for="Password">
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <button type="submit">Giriş Yap
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
                <div class="form-footer">
                    <p>Hesabın yok mu? <a href="/Register/Index/">Kayıt Ol!</a></p>
                </div>
            </form>
        </div>
    </div>
    
</body>
</html>
<style>
    .form-footer {
        text-align: center; /* Ortalamak için */
        margin-top: 20px; /* Formdan boşluk bırakmak için */
    }
</style>