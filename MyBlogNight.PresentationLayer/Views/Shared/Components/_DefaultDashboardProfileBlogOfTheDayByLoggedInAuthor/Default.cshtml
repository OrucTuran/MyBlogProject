@model List<MyBlogNight.EntityLayer.Concrete.Article>
@{
    Layout = null;
}

<div class="profile-blog pt-3 border-bottom-1 pb-1">
    <h5 class="text-primary d-inline">Günün Bloğu</h5>
    @foreach (var item in Model.Take(1))
    {
        <img src="@item.CoverImageUrl" alt="" class="img-fluid mt-4 mb-4 w-100">
        <h4>@item.Title</h4>
        <p>
            @(item.Detail.Length > 200 ? item.Detail.Substring(0, 200) + "..." : item.Detail)
        </p>
    }

</div>
<div class="profile-interest mt-4 pb-2 border-bottom-1">
    <h5 class="text-primary d-inline">Bloglarımdan Fotoğraflar</h5>
    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-xl-4 col-sm-4 col-6 int-col">
                <a href="javascript:void()" class="interest-cat">
                    <img src="@item.CoverImageUrl" alt="" class="img-fluid">
                </a>
            </div>
        }

    </div>
</div>

<div class="profile-news mt-4 pb-3">
    <h5 class="text-primary d-inline">Son Blog Yazılarım</h5>
    @foreach (var item in Model)
    {
        <div class="media pt-3 pb-3">
            <div class="col-lg-4 col-xl-4 col-sm-4 col-6 int-col">
                <a href="javascript:void()" class="interest-cat">
                    <img src="@item.CoverImageUrl" alt="" class="img-fluid">
                </a>
            </div>
            <div class="media-body">
                <h5 class="m-b-5">@item.Title</h5>
                <p>@(item.Detail.Length > 120 ? item.Detail.Substring(0, 120) + "..." : item.Detail)</p>
            </div>
        </div>
    }
</div>