@model List<MyBlogNight.EntityLayer.Concrete.Article>

@{
    Layout = null;
}

<div id="post-list">
    <!-- Örnek Blog Postu -->
    @foreach (var item in Model)
    {
        <div class="profile-uoloaded-post border-bottom-1 pb-5 mt-4">
            <img src="@item.CoverImageUrl" alt="" class="img-fluid mb-3">
            <a class="post-title" href="javascript:void()">
                <h4>@item.Title</h4>
            </a>
            <p>@item.Detail</p>
            <button class="btn btn-primary mr-3">
                <span class="mr-3"><i class="fa fa-heart"></i></span>Beğen
            </button>
            <button class="btn btn-secondary">
                <span class="mr-3"><i class="fa fa-reply"></i></span>Paylaş
            </button>
        </div>
    }
</div>

<div class="text-center mt-3">
    <button class="btn btn-primary">Daha Fazla Yükle</button>
</div>