@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogix - Kayıt Ol</title>

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/colorlib-regform-17/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/colorlib-regform-17/css/style.css">
</head>
<body>

    <div class="wrapper" style="background-image: url('@Url.Content("~/colorlib-regform-17/images/bg-registration-form-1.jpg")');">
        <div class="inner">
            <div class="image-holder">
                <img src="~/colorlib-regform-17/images/registration-form-1.jpg" alt="Register Form">
            </div>
            <form method="post">
                <h3>BLOGIX KAYIT OL</h3>
                <div class="form-wrapper">
                    <input type="text" placeholder="Adınız" class="form-control" asp-for="Name">
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">
                    <input type="text" placeholder="Soyadınız" class="form-control" asp-for="Surname">
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">
                    <input type="email" placeholder="Email Adresiniz" class="form-control" asp-for="Email">
                    <i class="zmdi zmdi-email"></i>
                </div>
                <div class="form-wrapper">
                    <input type="text" placeholder="Kullanıcı Adınız" class="form-control" asp-for="Username">
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">
                    <input type="password" placeholder="Şifreniz" class="form-control" asp-for="Password" required>
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <button type="submit">
                    Kayıt Ol
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
                <div class="text-primary" asp-validation-summary="ModelOnly"></div>

                 <div class="form-footer">
                    <p>Hesabın var mı? <a href="/Login/Index/">Giriş Yap!</a></p>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<style>
    .form-footer {
        text-align: center; /* Ortalamak için */
        margin-top: 20px; /* Formdan boşluk bırakmak için */
    }
</style>